<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.logindemo.HelloController">
    <VBox layoutX="150" layoutY="30" spacing="15" alignment="CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Register" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <Label text="Username:" />
        <TextField fx:id="regUsernameField" promptText="Choose a username" />

        <Label text="Email:" />
        <TextField fx:id="regEmailField" promptText="Enter your email" />

        <Label text="Password:" />
        <PasswordField fx:id="regPasswordField" promptText="Choose a password" />

        <Button text="Register" onAction="#handleRegisterButton" />
        <Button text="Go Back" onAction="#goToLogin" />
    </VBox>
</AnchorPane>
